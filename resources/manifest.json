{
  "manifest_version": 2,
  "name": "Collab Subtitles",
  "description": "Collaborative subtitle injector for web videos.",
  "version": "0.1",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],

      "css": ["collabsubtitles.css"],

      "js": [
        "webvtt.js",
        "jquery-1.9.1.js",
        "public/main.js",
        "init.js"
      ],

      "all_frames": true
    }
  ],

  "background": {
    "scripts": [
      "jquery-1.9.1.js",
      "public/main.js",
      "background.js"
    ],
    "persistent": true
  }
}
